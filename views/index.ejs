<!DOCTYPE html>
<html>
	<head>
		<title>MySQLTest</title>
		<link rel="stylesheet" type="text/css" href="../semantic/semantic.min.css">
		<script src="../javascripts/jQuery.js"></script>
		<script src="../semantic/semantic.min.js"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
		<script src="../javascripts/myApp.js"></script>
		<script src="../javascripts/controller.js"></script>


	</head>
	<body ng-app="myApp">
		<div class="ui very padded container segment" ng-controller="controller">
			<div class="ui fluid action input">
		  		<input id="searchString" type="text" placeholder="Search...">
		  		<div id="search" class="ui button">Search</div>
		  	</div>
		  	<div class="ui secondary pointing menu" id="headers">
			  <a id="name" class="active item">
			    Name
			  </a>
			  <a id="age" class="item">
			    Age
			  </a>
			  <a id="school" class="item">
			    School
			  </a>
			  <a id="parent" class="item">
			  	Parent
			  </a>
			  <a id="address" class="item">
			  	Address
			  </a>
			  <a id="number" class="item">
			  	Number
			  </a> 
			  <a id="fullBio" class="item">
			  	Full Bio
			  </a>
			</div>
		  	<div class="ui middle aligned divided list">
				<div class="item" ng-repeat="student in students" ng-controller="controller">
<!-- 				    <i class="large github middle aligned icon"></i> -->
				    <div class="content" ng-switch="selection">
				      <a class="header">{{student.first_name}} {{student.last_name}}</a>
				      <div class="description" ng-switch-default></div>
				      <div class="description" ng-switch-when="age">{{student.age}}</div>
				      <div class="description" ng-switch-when="school">{{student.school}}</div>
				      <div class="description" ng-switch-when="parent">{{student.parent_first_name}} {{student.parent_last_name}}</div>
				      <div class="description" ng-switch-when="address">{{student.address_street}} {{student.address_city}}, {{student.address_state}} {{student.address_zipcode}}</div>
				      <div class="description" ng-switch-when="number">{{student.phone_number}}</div>
				      <div class-"description" ng-switch-when="fullBio">
				      	Age: {{student.age}}<br>
				      	School: {{student.school}}<br>
				      	Address: {{student.address_street}} {{student.address_city}}, {{student.address_state}} {{student.address_zipcode}}<br>
				      	Phone Number: {{student.phone_number}}
				      </div>



				    </div>
				  </div>
				</div>
			</div>
		</div>	
	</body>
</html>